<h1>Login to <b>Words</b> <span style="font-size: 10pt;">(a flash card application)</span></h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <table>
  	 <tr>
  	 	<td>
  	 		<%= f.label :email %>
  	 	</td>
  	 	<td>
  	 		<%= f.text_field :email %>
  	 	</td>
  	 </tr>
  	 <tr>
  	 	<td>
  	 		<%= f.label :password %>
  	 	</td>
  	 	<td>
  	 		<%= f.password_field :password %>
  	 	</td>
  	 </tr>
  	 <tr>
  	 	<td>
  	 		
		</td>
  	 	<td>
  			<%= f.check_box :remember_me %><%= f.label :remember_me %><br />	 		
  	 	</td>
  	 </tr>
  	 <tr>
  	 	<td colspan="2">
 		  <%= f.submit "Login" %>
		  &nbsp;&nbsp;
		  <%= link_to 'or register', new_account_path%><br/>
   	 	</td>
  	 </tr>
  </table>
<% end %>