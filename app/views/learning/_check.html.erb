<% if @levenshteinPercent == 100 then %>
	<div id="msgDiv" style="color: green; font-size: 16pt;">Correct!</div>
<% else %>
	<div id="msgDiv" style="color: red; font-size: 12pt;">Wrong: <%=@levenshteinPercent%>%</div>
<% end %>

<div style="padding-top: 20px;">
	<table style="width: 100%;">
		<% if @levenshteinPercent < 100 then %>
			<tr>
				<td style="color: red; font-size: 16pt;">
					&lt;<%= params[:answer]%>&gt;		
				</td>
			</tr>
		<% end %>
		<tr>
			<td style="color: green; font-size: 16pt;">
				<% if check.answers.size <= 1 %>
					<%= check.first_answer.text%>
					<% if check.first_answer.tip %>
						<span style="font-size: 12pt; color: grey;">&nbsp;<%= check.first_answer.tip%></span>
					<%end%>
				<% else %>
					<table align="center" valign="bottom">
						<% check.answers.each_with_index do |a, i| %>
							<tr>
								<td style="text-align: left;">
									<%= i +1%>.
								</td>
								<td style="text-align: left; font-size: 21pt; padding-top: 10px;">
									<%= a.text%>
									<% if a.tip %>
										<span style="font-size: 12pt; color: grey;">&nbsp;<%= a.tip%></span>
									<%end%>
								</td>
							</tr>
						<% end %>
					</table>
				<%end%>
			</td>
		</tr>
		<% if check.answer_tip %>
			<tr>
				<td colspan="2" style="text-align: right; color: grey;">
					<%= check.answer_tip %>
				</td>
			</tr>
		<%end%>
	</table>
</div>
