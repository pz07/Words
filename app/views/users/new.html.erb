<h1>Register</h1>

<% form_for @user, :url => account_path do |f| %>
  <table>
    <tr>
    	<td colspan="2">
  			<%= f.error_messages %>  		
    	</td>
    </tr>	
    <tr>
    	<td>
  			<%= f.label :email %> 		
    	</td>
    	<td>
  			<%= f.text_field :email %>	
    	</td>
    </tr>	
    <tr>
    	<td>
  			<%= f.label :password, f.object.new_record? ? nil : "Change password" %>
    	</td>
    	<td>
  			<%= f.password_field :password %>
    	</td>
    </tr>	
    <tr>
    	<td>
  			<%= f.label :password_confirmation %>
    	</td>
    	<td>
  			<%= f.password_field :password_confirmation %>
    	</td>
    </tr>	
    <tr>
    	<td colspan="2">
  			<%= f.submit "Register" %>  	
			&nbsp;
			<%= link_to 'Back', new_user_session_path %>	
    	</td>
    </tr>	
  </table>
<% end %>